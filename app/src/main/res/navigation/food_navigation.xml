<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/food_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ian.junemon.foodiepedia.feature.view.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_left" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/push_up_in"
            app:exitAnim="@anim/push_down_out"
            app:popEnterAnim="@anim/push_up_in"
            app:popExitAnim="@anim/push_down_out" />
        <action
            android:id="@+id/action_homeFragment_to_bottomFilterFragment"
            app:destination="@id/bottomFilterFragment" />
        <!--<action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
        <action
            android:id="@+id/action_homeFragment_to_paginationFragment"
            app:destination="@id/paginationFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />-->
    </fragment>

    <fragment
        android:id="@+id/uploadFoodFragment"
        tools:layout="@layout/fragment_upload"
        android:name="com.ian.junemon.foodiepedia.feature.view.upload.UploadFoodFragment"
        android:label="UploadFragment" >
        <action
            android:id="@+id/action_uploadFoodFragment_to_openCameraFragment"
            app:destination="@id/openCameraFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/food_navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_uploadFoodFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/food_navigation"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        tools:layout="@layout/fragment_profile"
        android:name="com.ian.junemon.foodiepedia.feature.view.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_uploadFoodFragment"
            app:destination="@id/uploadFoodFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        tools:layout="@layout/fragment_detail"
        android:name="com.ian.junemon.foodiepedia.feature.view.DetailFragment"
        android:label="DetailFragment" >

        <argument
            android:name="detailValue"
            app:argType="com.ian.junemon.foodiepedia.core.presentation.model.FoodCachePresentation" />

    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        tools:layout="@layout/fragment_search"
        android:name="com.ian.junemon.foodiepedia.feature.view.search.SearchFragment"
        android:label="SearchFragment" >

        <action
            android:id="@+id/action_searchFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <dialog
        android:id="@+id/bottomFilterFragment"
        tools:layout="@layout/fragment_bottom_filter"
        android:name="com.ian.junemon.foodiepedia.feature.view.BottomFilterFragment"
        android:label="BottomFilterFragment" />
    <fragment
        tools:layout="@layout/fragment_open_camera"
        android:id="@+id/openCameraFragment"
        android:name="com.ian.junemon.foodiepedia.feature.view.upload.OpenCameraFragment"
        android:label="OpenCameraFragment" >
        <action
            android:id="@+id/action_openCameraFragment_to_selectImageFragment"
            app:destination="@id/selectImageFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/uploadFoodFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/selectImageFragment"
        tools:layout="@layout/fragment_select_image"
        android:name="com.ian.junemon.foodiepedia.feature.view.upload.SelectImageFragment"
        android:label="SelectImageFragment" >
        <action
            android:id="@+id/action_selectImageFragment_to_uploadFoodFragment"
            app:destination="@id/uploadFoodFragment" />
    </fragment>

</navigation>