<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_medium">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivSavedFood"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/dot_disable" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_huge"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_toRightOf="@id/ivSavedFood"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSavedFoodTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="Judul film" />

        <TextView
            android:id="@+id/tvSavedFoodCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:fontFamily="@font/lato"
            tools:text="2018-20-13" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivDeleteFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_close_black" />


</RelativeLayout>