<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:elevation="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivFoodImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/placeholder_bg"
            android:scaleType="centerCrop"
            android:transitionName="img_view_1"
            />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:background="@color/placeholder_bg_darker"
            android:transitionName="title_1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_above="@+id/tv_description_shimmer"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/tv_description_shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/white"
            android:maxLines="3"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/placeholder_bg_darker"
            android:transitionName="tv_bottom"
            android:layout_marginBottom="16dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>