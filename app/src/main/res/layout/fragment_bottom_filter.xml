<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/btmsheet_curve"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btmsheet_curve_top_yellow"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/spacing_medium"
                    android:text="Pick Your Food"
                    android:textColor="@color/textColor" />

                <ImageView
                    android:id="@+id/ivCloseDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/spacing_medium"
                    android:src="@drawable/ic_close_black" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btmsheet_curve"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_medium"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What you like ?" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnPickBreakfast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivBreakfast"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="@dimen/spacing_medium"
                        tools:src="@drawable/ic_filter_1"
                        android:gravity="center"
                        android:padding="@dimen/spacing_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:text="Breakfast"
                        android:textColor="@color/textColor"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivPickBreakfast"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/ic_check_circle_gray_24dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnPickLunch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivLunch"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="@dimen/spacing_medium"
                        tools:src="@drawable/ic_filter_2"
                        android:gravity="center"
                        android:padding="@dimen/spacing_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:text="Lunch"
                        android:textColor="@color/textColor"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivPickLunch"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/ic_check_circle_gray_24dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnPickDinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivDinner"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="@dimen/spacing_medium"
                        tools:src="@drawable/ic_filter_3"
                        android:gravity="center"
                        android:padding="@dimen/spacing_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:text="Dinner"
                        android:textColor="@color/textColor"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivPickDinner"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/ic_check_circle_gray_24dp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</layout>
