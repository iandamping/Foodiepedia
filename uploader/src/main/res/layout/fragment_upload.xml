<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="uploadViewModel"
            type="com.ian.junemon.foodiepedia.uploader.feature.vm.UploadViewModel" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fcfeff"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlUploadImage"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:background="@color/yellow_food">

                <ImageView
                    android:id="@+id/ivPickPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_margin="20dp"
                    android:background="@drawable/circle_black_drawable"
                    android:src="@drawable/ic_arrow_back_yellow_24dp" />


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivPhotoProfile"
                    android:visibility="gone"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    android:layout_width="50dp"
                    android:layout_margin="20dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    tools:src="@tools:sample/backgrounds/scenic" />

                <ImageButton
                    android:id="@+id/btnUnggahFoto"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_photo_camera_white_24dp"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvInfoUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnUnggahFoto"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:text="Upload foto"
                    android:textColor="@color/color_white" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/llInsertData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:fontFamily="@font/lato"
                    android:text="Food Name"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@={uploadViewModel.etFoodName}"
                    android:background="@drawable/et_background"
                    android:padding="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text="Food Category"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spPlaceType"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/spinner_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text="Can be found in"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@={uploadViewModel.etFoodArea}"
                    android:background="@drawable/et_background"
                    android:padding="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text="Food Description : "
                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@={uploadViewModel.etFoodDescription}"
                    android:background="@drawable/et_background"
                    android:padding="15dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnUnggah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/spacing_medium"
                android:background="@drawable/btn_upload"
                android:text="Upload"
                android:textColor="@color/color_white"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>
